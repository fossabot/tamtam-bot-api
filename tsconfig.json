{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "paths": {
      "*": ["src/*"]
    },
    "plugins": [{
      "transform": "@zerollup/ts-transform-paths"
    }]
  },
  "include": [
    "src/**/*"
  ]
}
