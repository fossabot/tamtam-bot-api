{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": [
      "@types/node",
      "axios"
    ],
    "paths": {
      "*": ["src/*"]
    },
    "plugins": [{
      "transform": "@zerollup/ts-transform-paths"
    }]
  },
  "include": [
    "src/**/*"
  ]
}
